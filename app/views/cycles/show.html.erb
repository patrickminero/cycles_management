<div class="h-screen w-2/3 mx-auto flex pt-28 justify-center">
  <div class="w-full h-auto">
    <div class="">
      <div class="md:flex md:justify-between w-6/12 m-auto">
        <h1 class="text-4xl text-indigo-900"><%= @cycle.name %></h1>
        <div class="border border-indigo-900 rounded py-2 p-3">
          <p class="text-xl mb-2">Carbon footprint</p>
          <p class="text-lg mb-1"><i class="fas fa-sun"></i> Climate change: <%= @cycle.climate_change %></p>
          <p class="text-lg mb-1"><i class="fas fa-water"></i> Water use: <%= @cycle.water_use %></p>
        </div>
      </div>
      <p class="font-sans text-5xl text-center font-semibold mb-5">Components</p>
      <div class="flex justify-between">
        <% @cycle.components.each do |comp| %>
          <% if comp.keys[1] == 'impacts' %>
            <div class="border border-indigo-900 rounded py-2 p-3">
              <p class="ml-3 font-sans text-lg font-semibold"><%= comp["name"] %></p>
              <p class="ml-5 font-sans text-lg font-normal">Climate change: <%= comp["impacts"]["climate_change"] %></p>
              <p class="ml-5 font-sans text-lg font-normal">Water use: <%= comp["impacts"]["water_use"] %></p>
            </div>
          <% elsif comp.keys[1] == 'components' %>
            <div class="flex flex-col border border-indigo-900 rounded py-2 p-3">
              <p class="ml-5 font-sans text-lg font-semibold"><%= comp["name"] %></p>
              <div class="">
                <% comp["components"].each do |sub| %>
                  <p class="ml-7 font-sans text-lg font-semibold"><%= sub["name"] %></p>
                  <p class="ml-9 font-sans text-lg font-normal">Climate change: <%= sub["impacts"]["climate_change"] %></p>
                  <p class="ml-9  font-sans text-lg font-normal">Water use: <%= sub["impacts"]["water_use"] %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_cycle_path(@cycle) %> |
<%= link_to 'Back', cycles_path %>
